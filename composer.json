{
    "name": "axleus/axleus-core",
    "description": "Axleus core package",
    "license": "BSD-3-Clause",
    "keywords": [
        "axleus",
        "webinertia",
        "mezzio"
    ],
    "homepage": "https://github.com/orgs/axleus/discussions",
    "authors": [
        {
            "name": "Joey Smith",
            "email": "jsmith@webinertia.net",
            "homepage": "https://webinertia.net/"
        }
    ],
    "suggest": {
        "laminas/laminas-component-installer" : "^3.0, required for configuration injection"
    },
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "bushbaby/flysystem": "^8.0",
        "composer/package-versions-deprecated": "^1.10.99",
        "laminas/laminas-component-installer": "^2.6 || ^3.0",
        "laminas/laminas-config-aggregator": "^1.13",
        "laminas/laminas-db": "^2.18",
        "laminas/laminas-diactoros": "^3.0.0",
        "laminas/laminas-form": "^3.13",
        "laminas/laminas-hydrator": "^4.14",
        "laminas/laminas-i18n": "^2.23",
        "laminas/laminas-servicemanager": "^3.4",
        "laminas/laminas-stdlib": "^3.6",
        "league/tactician-command-events": "^0.6.0",
        "mezzio/mezzio": "3.17.0",
        "mezzio/mezzio-authentication": "^1.8",
        "mezzio/mezzio-authentication-session": "^1.8",
        "mezzio/mezzio-authorization": "^1.8",
        "mezzio/mezzio-authorization-acl": "^1.9",
        "mezzio/mezzio-fastroute": "^3.0.3",
        "mezzio/mezzio-flash": "^1.7",
        "mezzio/mezzio-helpers": "^5.7",
        "mezzio/mezzio-laminasviewrenderer": "^2.12",
        "mezzio/mezzio-session-ext": "^1.18",
        "mikemix/tactician-module": "^3.2",
        "monolog/monolog": "^3.4",
        "ramsey/uuid": "^4.7",
        "webinertia/webinertia-db": "^0.0.7",
        "webinertia/webinertia-filter": "^0.0.5",
        "webinertia/webinertia-utils": "^0.0.10",
        "webinertia/webinertia-validator": "^0.0.4"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.5",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-phpunit": "^0.18.4",
        "laminas/laminas-test": "^4.8",
        "vimeo/psalm": "^5.14"
    },
    "extra": {
        "laminas": {
            "config-provider": "Axleus\\ConfigProvider"
        }
    },
    "autoload": {
        "psr-4": {
            "Axleus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Axleus\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "static-analysis": "psalm --shepherd --stats",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "phpstan": "php vendor/bin/phpstan analyse --xdebug"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "laminas/laminas-component-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.1.99"
        }
    }
}
